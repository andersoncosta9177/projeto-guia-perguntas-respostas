<%-include("partials/header.ejs");%>

<body class="">
    <%-include("partials/navbar.ejs");%>

    <div class="container">
        <hr>
        <h1><%=pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %></p>
        <hr>

        <form action="/responder" class="form-group" method="POST">
            <h3 class=" text-primary">Responda</h3>
            <label for="">resposta:</label>
            <textarea class="form-control" placeholder="digite sua resposta" name="corpo" id="" cols="30"
                rows="10"></textarea>
            <br>
            <input type="hidden" name="pergunta" id="" value="<%=pergunta.id%>">
            <button type="submit" class="btn btn-primary"> Responder</button>

        </form>

        <hr>
        <h3>Respostas</h3>
        <hr> 

        <% respostas.forEach(resposta =>{%>
            <br>
          <div class="card">
          <div class="card-body">
       <p><%= resposta.corpo %></p>
          </div>
          </div>
      <%})%> 

    </div>


</body>

</html>